{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@core/*": [
                "./core/*"
            ],
            "@shared/*": [
                "./shared/*"
            ],
            "@modules/*": [
                "./modules/*"
            ]
        },
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "core/**/*",
        "shared/**/*",
        "modules/**/*",
        "e2e/**/*.ts",
        "tests/**/*.ts",
        "*.ts",
        "*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}