{
    "name": "genesis-website-clean",
    "version": "1.4.2",
    "description": "Модульная платформа GENESIS с TypeScript",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "node scripts/prepare-deploy.js",
        "build:vite": "tsc && vite build --mode production",
        "build:dev": "vite build --mode development",
        "preview": "vite preview",
        "type-check": "tsc --noEmit",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:smoke": "node tests/smoke.js",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "playwright test --debug",
        "install:playwright": "playwright install",
        "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\" || true"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "chart.js": "^4.4.0",
        "qrcode": "^1.5.3"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.0.0",
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "rimraf": "^5.0.0",
        "terser": "^5.0.0",
        "typescript": "^5.0.0",
        "vite": "^5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "genesis",
        "plex",
        "cryptocurrency",
        "blockchain",
        "typescript",
        "modular"
    ],
    "author": "GENESIS Team",
    "license": "MIT"
}
